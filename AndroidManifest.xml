<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.mihailvelikov.scarsdale"
    android:versionCode="1"
    android:versionName="1.0" 
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="16" />

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name"
        android:hardwareAccelerated="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DatePickerActivity" 
            android:label="@string/calendar"></activity>
        <activity android:name=".DietDayActivity"
            android:label="@string/app_name"></activity>
    </application>

</manifest>